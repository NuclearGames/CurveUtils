        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurveBuilder"
        Closed="Window_Closed"
        mc:Ignorable="d"
        Title="CurveBuilder" Height="746" Width="762">
    <Grid Height="757" HorizontalAlignment="Left" Width="862" VerticalAlignment="Top" Margin="0,-10,0,0">
        <Canvas x:Name="CanvasXY" Background="Gray" MouseMove="CanvasXY_MouseMove" MouseRightButtonDown="CanvasXY_MouseRightButtonDown" MouseLeftButtonDown="CanvasXY_MouseDown" Width="348" Margin="257,39,0,329" HorizontalAlignment="Left" Height="700"/>
