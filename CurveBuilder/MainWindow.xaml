        <TextBox x:Name="Height" HorizontalAlignment="Right" Margin="0,192,726,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Width="120"/>
        <Button Content="Calc" HorizontalAlignment="Right" Margin="0,169,672,0" Click="CalculateRelation_Click" VerticalAlignment="Top" Height="41" Width="49"/>
        <Label x:Name="AddLabelX" Content="Label" Margin="0,71,700,0" VerticalAlignment="Top"/>
        <Label x:Name="AddLabelY" Content="Label" Margin="0,97,700,0" VerticalAlignment="Top"/>
        <Label Content="X" HorizontalAlignment="Left" Margin="-1,165,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.405,0.425"/>
        <Label Content="Y" HorizontalAlignment="Left" Margin="-1,188,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
