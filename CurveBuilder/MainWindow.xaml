        <Label x:Name="LabelOutputY" Content="Output Y: " Margin="0,123,700,0" VerticalAlignment="Top"/>
        <Button Content="Deserialize and DrawCurve" HorizontalAlignment="Right" Click="Deserialize_Click" Margin="0,501,693,0" VerticalAlignment="Top" Width="144" Height="71"/>
